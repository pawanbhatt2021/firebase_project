<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pdf_bg"
    tools:context=".pdfreader.UploadFile">

    <ImageView
        android:id="@+id/pdfBrowse"
        android:layout_width="173dp"
        android:layout_height="137dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/browse_icon" />

    <EditText
        android:id="@+id/pdfTitle"
        android:layout_width="208dp"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Enter Title"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfBrowse" />

    <ImageView
        android:id="@+id/pdfUpload"
        android:layout_width="127dp"
        android:layout_height="114dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfTitle"
        app:layout_constraintVertical_bias="0.315"
        app:srcCompat="@drawable/upload_icon" />

    <ImageView
        android:id="@+id/pdfFile"
        android:layout_width="181dp"
        android:layout_height="154dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pdf_icon" />

    <ImageView
        android:id="@+id/pdfCancel"
        android:layout_width="53dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toTopOf="@+id/pdfFile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.776"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cancel_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>